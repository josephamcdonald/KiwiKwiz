     App Name: Quizzy - the Kiwi Kwiz
     Author: Joseph McDonald -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_main"
    tools:context="com.example.android.kiwikwiz.KiwiActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/progress_bar" />

    <ScrollView style="@style/layout_scrollview">

        <LinearLayout style="@style/layout_linear_vertical">

            <TextView
                android:id="@+id/banner_question"
                style="@style/header_standard"
                android:text="@string/question_kiwi" />

            <View
                style="@style/view_divider_horizontal"
                android:layout_marginBottom="@dimen/standard_16dp" />

            <CheckBox
                android:id="@+id/checkBox_fruit"
                style="@style/layout_radio_button_checkbox"
                android:text="@string/checkbox_fruit" />

            <CheckBox
                android:id="@+id/checkBox_vegetable"
                style="@style/layout_radio_button_checkbox"
                android:text="@string/checkbox_vegetable" />

            <CheckBox
                android:id="@+id/checkBox_nz_money"
                style="@style/layout_radio_button_checkbox"
                android:text="@string/checkbox_nz_money" />

            <CheckBox
                android:id="@+id/checkBox_bird"
                style="@style/layout_radio_button_checkbox"
                android:text="@string/checkbox_bird" />

            <CheckBox
                android:id="@+id/checkBox_nz_resident"
                style="@style/layout_radio_button_checkbox"
                android:text="@string/checkbox_zealander" />

        </LinearLayout>

    </ScrollView>

    <View style="@style/view_divider_horizontal" />

    <Button
        android:id="@+id/button_bottom"
        style="@style/button_bottom"
        android:text="@string/button_next" />

</LinearLayout>